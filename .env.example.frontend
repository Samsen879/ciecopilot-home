# ===========================================
# Agent B (前端) 环境变量配置模板
# ===========================================
# 复制此文件为 .env.local 并填入实际值
# 注意：.env.local 文件不应提交到版本控制

# ===========================================
# Supabase 配置 (必需)
# ===========================================
# Supabase项目URL - 从Supabase控制台获取
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase匿名密钥 - 从Supabase控制台获取
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# OpenAI 配置 (必需)
# ===========================================
# OpenAI API密钥 - 从OpenAI控制台获取
VITE_OPENAI_API_KEY=sk-...

# OpenAI API基础URL (可选，默认为官方API)
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# RAG系统配置 (必需)
# ===========================================
# RAG API基础路径
VITE_RAG_API_BASE=/api/rag

# RAG API超时时间(毫秒)
VITE_RAG_API_TIMEOUT=30000

# ===========================================
# 向量嵌入配置 (可选)
# ===========================================
# 嵌入API基础URL
VITE_EMBEDDING_BASE_URL=https://api.openai.com/v1

# 嵌入API密钥 (通常与OpenAI相同)
VITE_EMBEDDING_API_KEY=sk-...

# 嵌入模型名称
VITE_EMBEDDING_MODEL=text-embedding-3-small

# 嵌入向量维度
VITE_EMBEDDING_DIMENSIONS=1536

# ===========================================
# 开发环境配置 (可选)
# ===========================================
# 是否使用Mock Service Worker进行API模拟
VITE_USE_MSW=false

# 开发模式
NODE_ENV=development

# API基础URL (开发环境)
VITE_API_BASE_URL=http://localhost:3000

# 是否启用调试模式
VITE_DEBUG_MODE=true

# ===========================================
# 性能监控配置 (可选)
# ===========================================
# 是否启用性能监控
VITE_ENABLE_ANALYTICS=false

# 错误监控服务URL
VITE_ERROR_REPORTING_URL=

# ===========================================
# 功能开关 (可选)
# ===========================================
# 是否启用AI辅导功能
VITE_ENABLE_AI_TUTOR=true

# 是否启用学习路径功能
VITE_ENABLE_LEARNING_PATH=true

# 是否启用知识缺陷分析
VITE_ENABLE_KNOWLEDGE_GAP_ANALYSIS=true

# ===========================================
# UI配置 (可选)
# ===========================================
# 默认主题
VITE_DEFAULT_THEME=light

# 是否启用动画
VITE_ENABLE_ANIMATIONS=true

# 聊天消息最大长度
VITE_MAX_MESSAGE_LENGTH=2000

# 聊天历史保存条数
VITE_CHAT_HISTORY_LIMIT=50

# ===========================================
# 安全配置 (可选)
# ===========================================
# CORS允许的域名
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 是否启用HTTPS
VITE_FORCE_HTTPS=false

# ===========================================
# 缓存配置 (可选)
# ===========================================
# API响应缓存时间(毫秒)
VITE_API_CACHE_TIME=300000

# 静态资源缓存时间(毫秒)
VITE_STATIC_CACHE_TIME=86400000

# ===========================================
# 配置说明
# ===========================================
# 1. 所有以VITE_开头的变量会被Vite打包到前端代码中
# 2. 不要在前端环境变量中存储敏感信息
# 3. 生产环境请使用不同的配置值
# 4. 确保Supabase和OpenAI的密钥有效且有足够权限
# 5. RAG API路径应与后端Agent A的配置保持一致